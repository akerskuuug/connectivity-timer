<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/medium_mode"
   	android:layout_width="match_parent"
   	android:layout_height="match_parent"
   	android:orientation="vertical"
   	android:visibility="gone">
	
    <TextView
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="15dip"
        android:textColor="#000000"
        android:textSize="12dip"
        android:text="@string/scheduler_medium_tip"
	/>
    
    		     
 	<CheckBox 
 	    android:id="@+id/medium_wf_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
		android:paddingLeft="45dip"
		android:button="@drawable/check_button_bg"
        android:text="@string/wifi_disable_between"
        android:textSize="13dip"       			
     	android:textColor="#000000"/>
 	
    <!-- Divider -->
  	<include layout="@layout/divider"/>
  	<TextView
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:textColor="#000000"
        android:textSize="15dip"
        android:text="@string/weekday"
	/>
    <LinearLayout 
  	 		android:layout_width="match_parent"
 	 		android:layout_height="wrap_content"
 	 		android:orientation="horizontal">
  	
	   <Spinner 
	  	    android:id="@+id/weekday_wf_from_spinner"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:paddingLeft="20dip" 
			android:paddingRight="50dip" 
		    android:background="@drawable/spinner_bg"/>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:textColor="#000000"
	        android:textSize="15dip"
	        android:text="@string/and"
	   />
	   <Spinner 
	       	android:id="@+id/weekday_wf_to_spinner"
	       	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_marginBottom="7dip" 
			android:paddingLeft="20dip" 
			android:paddingRight="50dip" 
		    android:background="@drawable/spinner_bg"/>
  		</LinearLayout>
			
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="0dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:textColor="#000000"
	        android:textSize="15dip"
	        android:text="@string/weekend"
		/>
	   	<LinearLayout 
  	 		android:layout_width="match_parent"
 		 	android:layout_height="wrap_content"
 		 	android:layout_marginBottom="20dip"
 		 	android:orientation="horizontal">
	   <Spinner 
	  	    android:id="@+id/weekend_wf_from_spinner"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:paddingLeft="20dip" 
			android:paddingRight="50dip" 
		    android:background="@drawable/spinner_bg"/>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:textColor="#000000"
	        android:textSize="15dip"
	        android:text="@string/and"
	   />
	   <Spinner 
	       	android:id="@+id/weekend_wf_to_spinner"
	       	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:paddingLeft="20dip" 
			android:paddingRight="50dip" 
		    android:background="@drawable/spinner_bg"/>
   </LinearLayout>
   
   <LinearLayout 
        android:id="@+id/scheduler_m_tg_layout"
  	 	android:layout_width="match_parent"
 		android:layout_height="wrap_content"
 		android:orientation="vertical"
 		android:layout_marginBottom="20dip">
	   <CheckBox 
	       	android:id="@+id/medium_tg_check"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
			android:paddingLeft="45dip"
			android:button="@drawable/check_button_bg"
	        android:text="@string/tg_disable_between"
	        android:textSize="13dip"       			
	     			android:textColor="#000000"/>
	    <!-- Divider -->
	  	<include layout="@layout/divider"/>
	
	  	<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="0dip"
		        android:layout_marginLeft="15dip"
		        android:layout_marginRight="15dip"
		        android:textColor="#000000"
		        android:textSize="15dip"
		        android:text="@string/weekday"
			/>
	    <LinearLayout 
	  	 		android:layout_width="match_parent"
	 		 	android:layout_height="wrap_content"
	 		 	android:orientation="horizontal">
	 		
		   	<Spinner 
		     	android:id="@+id/weekday_tg_from_spinner"
		       	android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
				android:paddingLeft="20dip" 
				android:paddingRight="50dip"
				android:layout_marginBottom="7dip" 
			    android:background="@drawable/spinner_bg"/> 
			<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dip"
		        android:layout_marginLeft="15dip"
		        android:layout_marginRight="15dip"
		        android:textColor="#000000"
		        android:textSize="15dip"
		        android:text="@string/and"
			   />
		   	<Spinner 
		       	android:id="@+id/weekday_tg_to_spinner"
		       	android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
				android:paddingLeft="20dip" 
				android:paddingRight="50dip" 
			    android:background="@drawable/spinner_bg"/>
			</LinearLayout>
			<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="0dip"
		        android:layout_marginLeft="15dip"
		        android:layout_marginRight="15dip"
		        android:textColor="#000000"
		        android:textSize="15dip"
		        android:text="@string/weekend"
			/>
		   	<LinearLayout 
	  	 		android:layout_width="match_parent"
	 		 	android:layout_height="wrap_content"
	 		 	android:orientation="horizontal">
		   	<Spinner 
		     	android:id="@+id/weekend_tg_from_spinner"
		       	android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
				android:paddingLeft="20dip" 
				android:paddingRight="50dip" 
			    android:background="@drawable/spinner_bg"/> 
			<TextView
			    
		     	android:id="@+id/weekend_scheduler_and_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dip"
		        android:layout_marginLeft="15dip"
		        android:layout_marginRight="15dip"
		        android:textColor="#000000"
		        android:textSize="15dip"
		        android:text="@string/and"
			   />
		   	<Spinner 
		       	android:id="@+id/weekend_tg_to_spinner"
		       	android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
				android:paddingLeft="20dip" 
				android:paddingRight="50dip" 
			    android:background="@drawable/spinner_bg"/>
	   </LinearLayout>
   </LinearLayout>
</LinearLayout>