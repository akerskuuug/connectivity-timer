<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dip"
    android:background="@android:color/transparent">

    <LinearLayout     
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:orientation="horizontal">
        <TextView 
            android:id="@+id/from_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
            android:text="00:00"
            android:textSize="16dip"
	        android:textColor="#000000"/>
        
        <TextView 
            android:id="@+id/and_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
            android:text="@string/to"
	        android:textColor="#000000"/>
        
        <TextView 
            android:id="@+id/to_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
            android:text="00:00"
            android:textSize="16dip"
	        android:textColor="#000000"/>
        
    </LinearLayout>
    
 	<LinearLayout     
 	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
 		<TextView 
            android:id="@+id/disable_wifi_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
            android:text="@string/wifi"
            android:textSize="12dip"
	        android:textColor="#000000"/>
        
        <TextView 
            android:id="@+id/disable_3g_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
            android:text="@string/tg"
            android:textSize="12dip"
	        android:textColor="#000000"/> 	    
 	</LinearLayout>
    <LinearLayout     
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
        
        
 		<TextView 
            android:id="@+id/monday_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
         	android:text="@string/monday_short"
            android:textSize="10dip"
	        android:textColor="#000000"/>
        
        <TextView 
            android:id="@+id/tuesday_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
         	android:text="@string/tuesday_short"
            android:textSize="10dip"
	        android:textColor="#000000"/>
        
        <TextView 
            android:id="@+id/wednesday_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
         	android:text="@string/wednesday_short"
            android:textSize="10dip"
	        android:textColor="#000000"/>
        
        <TextView 
            android:id="@+id/thursday_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
         	android:text="@string/thursday_short"
            android:textSize="10dip"
	        android:textColor="#000000"/>
        
        <TextView 
            android:id="@+id/friday_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
         	android:text="@string/friday_short"
            android:textSize="10dip"
	        android:textColor="#000000"/>
        
        <TextView 
            android:id="@+id/saturday_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
         	android:text="@string/saturday_short"
            android:textSize="10dip"
	        android:textColor="#000000"/>
        
        <TextView 
            android:id="@+id/sunday_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    		android:padding="5dip"	
         	android:text="@string/sunday_short"
            android:textSize="10dip"
	        android:textColor="#000000"/>
        
    </LinearLayout>

</LinearLayout>